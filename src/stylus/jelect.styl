icon()
	&:before
		position absolute
		top 0
		left 10px
		bottom 0
		margin auto
		display block
		width 16px
		height 16px
		background-image url(../img/wand.png)
		background-repeat no-repeat
		content ''

.jelect
	position relative
	display inline-block
	vertical-align top
	box-sizing border-box
	width 100%
	height 40px
	background #fff
	box-shadow 0 0 0 1px #ccc
	cursor pointer
	user-select none
	box-sizing border-box

	&_state_active
		box-shadow 0 0 0 1px #ccc, 0 2px 4px rgba(0, 0, 0, .25)

	&:focus
	*:focus
		outline none

	&-input
		display none

	&-current
		position relative
		width 100%
		height 100%
		overflow hidden
		padding 8px 58px 8px 36px
		font-family cuprum
		font-size 18px
		line-height 24px
		color #222
		overflow-wrap normal
		text-overflow ellipsis
		white-space nowrap

		&:focus
			outline none

		icon()

		&:after
			position absolute
			top 0
			right 18px
			bottom 1px
			margin auto
			width 0
			height 0
			border-top 5px solid #222
			border-left 5px solid transparent
			border-right 5px solid transparent
			content ''

	&-options
		position absolute
		top 100%
		left 0
		right 0
		z-index 200
		margin-top 1px
		display none
		max-height 194px
		overflow-y auto
		overflow-x hidden
		background #fff
		box-shadow 0 0 0 1px #ccc,
				   0 2px 4px rgba(0, 0, 0, .25)

		&_state_active
			display block

	&-option
		position relative
		overflow hidden
		margin-bottom 1px
		padding 8px 16px 8px 36px
		display block
		height 38px
		font-family cuprum
		font-size 18px
		line-height 22px
		color #222
		box-shadow 0 1px 0 #ccc
		overflow-wrap normal
		text-overflow ellipsis
		white-space nowrap
		transition .125s ease-out

		&:last-child
			margin-bottom 0
			box-shadow none


		&:hover
		&_state_active
			text-decoration underline
			background-color #fff2b3

		icon()
