@import 'normalize'

cuprum = 'Cuprum', sans-serif

html
	display table
	width 100%
	height 100%

body
	padding 20px 0
	display table-cell
	width 100%
	height 100%
	vertical-align middle
	color #222
	font-family cuprum
	background #f0f0f0 url(../img/chruch.png)

.main
	padding 20px
	max-width 500px
	font-size 16px
	border-radius 4px
	background #fff
	box-shadow 0 0 8px rgba(0, 0, 0, .5)

	@media screen and (max-width: 540px)
		margin 0 20px

	@media screen and (min-width: 541px)
		margin 0 auto

	&::selection
		background #ffffd0

.logo
	margin 0 auto 20px
	display block
	width 176px
	height 36px

.h1
	margin-bottom 20px
	font-size 20px
	font-weight bold
	text-align center

.description
	margin-bottom 40px
	font-size 18px
	text-align center

.container
	@media screen and (min-width: 541px)
		display table

.copyright
	margin 30px -20px -20px
	padding 20px
	border-radius 0 0 4px 4px
	text-align center

.fork-on-github
	&::selection
		background transparent

	@media screen and (min-width: 541px)
		position absolute
		top 0
		right 0
		display block
		height 200px
		width 200px
		overflow hidden

	&__link
		display block
		padding 5px 40px
		font bold 1rem/2rem arial, sans-serif
		font-weight bold
		text-align center
		text-decoration none
		transition background .25s ease-out, color .25s ease-out

		@media screen and (max-width: 540px)
			margin-top 40px
			color #e74c3c
			border-radius 4px

			&:active
				transform scale(.975)

		@media screen and (min-width: 541px)
			position absolute
			top 50px
			right -54px
			width 250px
			color #fff
			background #222 url(../img/vertical-cloth.png)
			box-shadow 0 0 8px rgba(0, 0, 0, 0.5)
			transform rotate(45deg)

			&:before
			&:after
				position absolute
				top 1px
				left 0
				display block
				height 1px
				width 100%
				background #fff
				content ''

			&:after
				bottom 1px
				top auto

		&:hover
			color #fff
			background #e74c3c

@import 'jelect'
